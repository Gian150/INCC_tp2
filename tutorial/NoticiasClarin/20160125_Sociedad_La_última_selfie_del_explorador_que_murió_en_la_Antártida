        $.ajax({
            url: "https://api.twitter.com/1/statuses/oembed.json?url=https://twitter.com/shackletonsolo/status/665127014240804864",
            jsonp: "callback",
            cache: 'false',
            dataType: "jsonp",
            success: function( response ) {
                $("#tweet_66512701424080486")
                    .html(response.html)
                    .trigger('columnGrowUp', 2000);
            }
        });
    });



