        $.ajax({
            url: "https://api.twitter.com/1/statuses/oembed.json?url=https://twitter.com/GrupoIndalo/status/697513776065744897",
            jsonp: "callback",
            cache: 'false',
            dataType: "jsonp",
            success: function( response ) {
                $("#tweet_69751377606574489")
                    .html(response.html)
                    .trigger('columnGrowUp', 2000);
            }
        });
    });
 


